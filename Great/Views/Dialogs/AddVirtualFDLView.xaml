<!--
DESIGNER EXCEPTION 
    The value representation 'Id' does not match the mask.
    
    This bug is generated by the xctk lib and is only a design time issue.
    If u want temporary fix this bug, change the MaskedTextBox "Value" field in "Text" 
    BUT REMEMBER TO ROLLBACK THIS CHANGE BEFORE COMMIT CHANGES!!!    
-->
<mah:MetroWindow
        x:Class="Great2.Views.Dialogs.AddVirtualFDLView"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:utils="clr-namespace:Microsoft.Exchange.WebServices.Data;assembly=Microsoft.Exchange.WebServices"
        xmlns:ap="clr-namespace:Great2.Utils.AttachedProperties"
        mc:Ignorable="d"
        DataContext="{Binding VirtualFDL, Source={StaticResource Locator}}"        
        Title="Add Virtual FDL" 
        Height="240" Width="270"
        WindowStartupLocation="CenterOwner"
        ShowMinButton="False"
        ShowMaxRestoreButton="False"
        ResizeMode="NoResize">
    <mah:MetroWindow.Resources>
        <ObjectDataProvider x:Key="enumMonths"
                                MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="utils:Month"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </mah:MetroWindow.Resources>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="FDL Number:" HorizontalAlignment="Right"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Month:" HorizontalAlignment="Right"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Week:" HorizontalAlignment="Right"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Order:" HorizontalAlignment="Right"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Extra:" HorizontalAlignment="Right"/>
        <xctk:MaskedTextBox Grid.Row="0" Grid.Column="1" Mask="0000\/00000" Value="{Binding Id}" ValueDataType="{x:Type System:String}" FontSize="12" Margin="2"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="2"
                  ItemsSource="{Binding Source={StaticResource enumMonths}}"
                  SelectedValue="{Binding SelectedMonth, ValidatesOnDataErrors=true, NotifyOnValidationError=true}"
                  IsEnabled="{Binding IsMonthEnabled}"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="2"
                  ItemsSource="{Binding Weeks}"
                  SelectedValue="{Binding SelectedWeekNr}"
                  IsEnabled="{Binding IsWeekEnabled}"/>
        <mah:NumericUpDown Grid.Row="3" Grid.Column="1" Value="{Binding Order}" HasDecimals="False" HideUpDownButtons="True" Minimum="0" Margin="2"/>
        <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding IsExtra}" VerticalAlignment="Center" Margin="2"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Margin="3"/>
            <Button Content="Add" Command="{Binding AddCommand}" Margin="3"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
